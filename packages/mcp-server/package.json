{
  "name": "sekkei-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for generating Japanese software specification documents following V-model",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sekkei-mcp": "dist/index.js",
    "sekkei-setup": "bin/setup.js"
  },
  "files": [
    "dist/",
    "templates/",
    "python/",
    "adapters/",
    "bin/"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs tests/integration",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "handlebars": "^4.7.8",
    "pino": "^9.6.0",
    "playwright": "^1.58.2",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.13.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mcp",
    "japanese",
    "documentation",
    "specification",
    "v-model",
    "設計書"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bienhoang/sekkei.git"
  },
  "license": "MIT"
}