{
  "name": "@bienhoang/sekkei-mcp-server",
  "version": "2.3.0",
  "description": "MCP Server for generating Japanese software specification documents following V-model",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sekkei-mcp": "dist/index.js",
    "sekkei-setup": "bin/setup.js",
    "sekkei-init": "bin/init.js",
    "sekkei": "bin/cli.js"
  },
  "files": [
    "dist/",
    "templates/",
    "python/",
    "adapters/",
    "bin/"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs tests/integration",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "citty": "^0.2.1",
    "docx": "^9.5.3",
    "exceljs": "^4.4.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^171.4.0",
    "handlebars": "^4.7.8",
    "marked": "^17.0.3",
    "pino": "^9.6.0",
    "playwright": "^1.58.2",
    "simple-git": "^3.32.1",
    "ts-morph": "^27.0.2",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.13.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "keywords": [
    "mcp",
    "japanese",
    "documentation",
    "specification",
    "v-model",
    "設計書"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bienhoang/sekkei-ai-agents.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/bienhoang/sekkei-ai-agents/tree/main/packages/mcp-server",
  "bugs": "https://github.com/bienhoang/sekkei-ai-agents/issues",
  "license": "MIT"
}
