<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>{{{css}}}</style>
</head>
<body>
  <div class="wireframe" style="--viewport-width: {{viewportWidth}}px">
    {{#each regionEntries}}
      {{#if (eq this.name "header")}}
    <div class="region{{#if this.region.style}} region-{{this.region.style}}{{/if}}">
      <div class="region-label">{{this.name}}</div>
      <div class="nav-bar">
        {{#each this.region.components}}{{> component this}}{{/each}}
      </div>
    </div>
      {{/if}}
    {{/each}}

    {{#each regionEntries}}
      {{#if (eq this.name "steps")}}
    <div class="stepper">
      {{#each this.region.components}}
      <div class="step{{#if this.active}} active{{else if this._completed}} completed{{/if}}">
        <div class="step-circle">{{this.n}}</div>
        <div class="step-label">{{this.label}}</div>
      </div>
      {{/each}}
    </div>
      {{/if}}
    {{/each}}

    {{#each regionEntries}}
      {{#if (eq this.name "main")}}
    <div class="step-content">
      {{#each this.region.components}}{{> component this}}{{/each}}
    </div>
      {{/if}}
    {{/each}}

    {{#each regionEntries}}
      {{#if (eq this.name "footer")}}
    <div class="step-nav">
      {{#each this.region.components}}{{> component this}}{{/each}}
    </div>
      {{/if}}
    {{/each}}
  </div>
</body>
</html>
