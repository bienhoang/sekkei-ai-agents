<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>{{{css}}}</style>
</head>
<body>
  <div class="wireframe" style="--viewport-width: {{viewportWidth}}px">
    {{#each regionEntries}}
      {{#unless (eq this.name "main")}}
        {{#unless (eq this.name "footer")}}
    <div class="region{{#if this.region.style}} region-{{this.region.style}}{{/if}}">
      <div class="region-label">{{this.name}}</div>
      {{#each this.region.components}}{{> component this}}{{/each}}
    </div>
        {{/unless}}
      {{/unless}}
    {{/each}}
    <div class="modal-backdrop">
      <div class="modal-box">
        <div class="modal-header">
          {{screen_name}}
          <span style="cursor:pointer;color:#868e96">âœ•</span>
        </div>
        {{#each regionEntries}}
          {{#if (eq this.name "main")}}
            {{#each this.region.components}}{{> component this}}{{/each}}
          {{/if}}
        {{/each}}
        <div class="modal-footer">
          {{#each regionEntries}}
            {{#if (eq this.name "footer")}}
              {{#each this.region.components}}{{> component this}}{{/each}}
            {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</body>
</html>
