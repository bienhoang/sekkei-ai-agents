<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>{{{css}}}</style>
</head>
<body>
  <div class="wireframe" style="--viewport-width: {{viewportWidth}}px">
    {{#each regionEntries}}
    <div class="region{{#if this.region.style}} region-{{this.region.style}}{{/if}}">
      <div class="region-label">{{this.name}}</div>
      {{#if (eq this.name "header")}}
        <div class="nav-bar">
          {{#each this.region.components}}{{> component this}}{{/each}}
        </div>
      {{else if (eq this.name "main")}}
        <div class="form-container">
          {{#if ../screen_name}}<div class="form-title">{{../screen_name}}</div>{{/if}}
          {{#each this.region.components}}{{> component this}}{{/each}}
        </div>
      {{else}}
        {{#each this.region.components}}{{> component this}}{{/each}}
      {{/if}}
    </div>
    {{/each}}
  </div>
</body>
</html>
