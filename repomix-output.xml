/* === MOBILE SHELL === */
.mobile-shell { display: grid; grid-template-rows: var(--shell-header-height) 1fr var(--shell-tabbar-height); grid-template-areas: "header" "content" "tabbar"; max-width: var(--viewport-width, 390px); background: var(--color-bg); border: 1px solid var(--color-border-strong); }

